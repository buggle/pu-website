- title "Parentships"
%p
  %strong
    Kind:
  = h @parentships.kid_id
%p
  %strong
    Pate:
  = h @parentships.parent_id
%p
  %strong
    Beginn:
  = h @parentships.starts_at
%p
  %strong
    Ende:
  = h @parentships.expires_at

%p
  %strong
    Beitrag:
  = h @parentships.fee
%p
  %strong
    Beitragszeit:
  = h @parentships.paying_period
%p
  = link_to "Bearbeiten", edit_parentship_path(@parentships)
  |
  = link_to "Löschen", @parentships, :confirm => 'Diese Patenschaft wirklich löschen?', :method => :delete
  |
  = link_to "Übersicht Patenschaften", parentships_path
