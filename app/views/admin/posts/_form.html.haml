= form.error_messages

.form
  %ul
    %li
      = form.label :category_id
      = form.select :category_id, Category.all.collect {|p| [ p.name, p.id ] }, { :include_blank => true }, :class => 'text'
    %li
      = form.label :title
      = form.text_field :title, :class => 'text'
    %li
      :javascript
        mySettings['previewParserPath'] = "#{@post.id.nil? ? admin_preview_new_post_path : preview_admin_post_path(@post)}"

      = form.label :body
      = form.text_area :body, :class => 'text markItUp'